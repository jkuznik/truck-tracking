<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="jkuznik">
        <createTable tableName="truck_trailer_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="truck_id" type="BIGINT"/>
            <column name="trailer_id" type="BIGINT"/>
            <column name="start_period_date" type="TIMESTAMP"/>
            <column name="end_period_date" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_truck"
                baseTableName="truck_trailer_history"
                baseColumnNames="truck_id"
                referencedTableName="truck"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_trailer"
                baseTableName="truck_trailer_history"
                baseColumnNames="trailer_id"
                referencedTableName="trailer"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>